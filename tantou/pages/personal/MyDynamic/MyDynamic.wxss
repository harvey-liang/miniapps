/* pages/probering/probering.wxss */
.probering{
  width: 100%;
  height: 100%;
   box-shadow:0px 0px 2px 0px #dadada inset;
   border-top:2px #dadada solid;
}
page{  
  display: flex;  
  flex-direction: column;  
  height: 100%;  
}  
.navbar{   
  background: #fff;  
  width: 100%;
  height: 8%;
}  
.navbar .item{  
  position: relative;  
  width: 25%;
  height: 100%; 
  font-size: 35rpx;
}  
.navbar .item.active{  
  color: #00cbc9;  
}  
.navbar .item.active:after{  
  content: "";   
  position: absolute;  
  bottom: 0;  
  left: 25%;  
  right: 0;  
  height: 8rpx;  
  width: 50%;
  background: #00cbc9;  
}  
.recommend_box{
  width: 100%;
  overflow: hidden;
}
.Top_information{
  display: flex;
  width: 100%;
  height: 14%;
}
.info_box{
  display:flex;
width:50%;
height:120rpx;
margin:30rpx 0rpx 0 30rpx;

}

.avatar{
  width: 120rpx;
  height: 120rpx;
  border-radius:  50% 50%;
}
.uesr{
 margin-top:10rpx;
margin-left:30rpx;
width:35%;
height:110rpx;
}
.uesr_name{
  color: #00cbc9;
  font-size: 36rpx;
  -webkit-box-align:start;
}
.time{
  margin-top:20rpx; 
  font-size: 24rpx;
  -webkit-box-align:start;
}


.description_box{
  width: 94%;
  font-size: 30rpx;
  margin: 3%  3%;
}
.textareabox{
  width: 100%;
  height: 100%;
}
.image_box{
  width: 100%;
  position: relative;
}
.comment_box{
   width: 100%;
    height: 4%;
    margin: 26rpx 0%;
}
.borber{
  border-left: 1px #888888 solid;
}
.Grid {
  display: flex;
   height: 100%;
 
}

.Grid-cell {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}
.Grid-cell image{
   width: 26rpx;
    height: 26rpx;
}
.Grid-cell text{
  margin-left: 30rpx;
}

.comments_box textarea{
        width: 90%;   
        height: 5%;  
}
.comments_box text{
       color: #00cbc9;
}

.Partition_box{
     width: 100%;
     height: 20rpx;
     background-color: #f4f4f4;
}
.score_box{
  position: absolute;
  right: 0px;
  bottom: 0px;
  width: 200rpx;
  height: 200rpx;
  z-index: 1000;
}
.score_box image{
   width: 200rpx;
  height: 200rpx;
  color: #ffffff;
   position: absolute;
}
.score_box text{
  right: 0px;
  bottom: 0px;
  width: 150rpx;
  height: 170rpx;
  color: #ffffff;
  font-size: 66rpx;
  font-weight: 200;
  text-align: center;
  position: absolute;
  z-index: 10000;
}
.Grid-cell button::after {
  border: 0;
} 
 .forbutton{
  font-size: 20rpx;
  background-color: #ffffff;
  margin-left:30rpx;
  padding: 0px;
  margin-right: 0px;
}